<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/corDeEstado"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/color_primary"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtNomeClienteList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome CLiente"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtContactoClienteList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contato CLiente"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtProdutoList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produto"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txtQuantidadeProdutoPList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantidade"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/txtLocalEntregaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Local de Entrega"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtDiaEntregaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dia de Entrega"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtPrecoTotalList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total a pagar"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>